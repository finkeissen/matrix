{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.invalid/matrix/system/schema/v1/conflict.schema.json",
  "title": "conflict (v1)",
  "type": "object",
  "allOf": [
    { "$ref": "./_defs.schema.json#/$defs/base_fields" },
    {
      "required": ["problem_id", "participants", "conflict_type"],
      "properties": {
        "type": { "const": "conflict" },
        "problem_id": { "$ref": "./_defs.schema.json#/$defs/id" },
        "participants": {
          "type": "array",
          "minItems": 1,
          "items": { "$ref": "./_defs.schema.json#/$defs/artifact_ref" }
        },
        "conflict_type": {
          "type": "string",
          "enum": [
            "source_disagreement",
            "methodological_difference",
            "temporal_revision",
            "definitional_difference",
            "normative_divergence",
            "scope_mismatch",
            "unknown"
          ]
        },
        "conflict_scope": { "type": "string", "enum": ["partial", "total"] },
        "notes": { "type": "string" }
      },
      "additionalProperties": true
    }
  ]
}

